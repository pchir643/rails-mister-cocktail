<div class="container">
  <h1>My Cocktails</h1>
  <div class=row>
    <%= link_to("New cocktail", new_cocktail_path, :class => "navbar-button") %>
  </div>
  <div>
    <ul>
      <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail), class: 'btn btn-primary' %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

