<div class="container">
  <div class="row">
    <h1> <%= @cocktail.name %> </h1>
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to "Suppr", dose_path(dose), method: :delete  %>
      </li>
    <% end %>
    </ul>
  </div>
</div>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Go back to cocktails", cocktails_path %>